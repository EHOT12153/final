{
  "uid": "spring-boot-simple",
  "title": "Spring Boot - Simple Overview",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "5s",
  "time": { "from": "now-30m", "to": "now" },
  "panels": [
    {
      "type": "stat",
      "title": "UP targets",
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 },
      "targets": [
        { "refId": "A", "expr": "sum(up)" }
      ],
      "fieldConfig": { "defaults": { "unit": "none" } }
    },
    {
      "type": "timeseries",
      "title": "UP by instance",
      "gridPos": { "x": 4, "y": 0, "w": 20, "h": 6 },
      "targets": [
        { "refId": "A", "expr": "up" }
      ]
    },
    {
      "type": "timeseries",
      "title": "HTTP RPS (per instance)",
      "gridPos": { "x": 0, "y": 6, "w": 24, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (rate(http_server_requests_seconds_count[1m]))"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "JVM Heap used (per instance)",
      "gridPos": { "x": 0, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (jvm_memory_used_bytes{area=\"heap\"})"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    },
    {
      "type": "timeseries",
      "title": "JVM Threads live (per instance)",
      "gridPos": { "x": 12, "y": 12, "w": 12, "h": 6 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (instance) (jvm_threads_live_threads)"
        }
      ]
    }
  ]
}